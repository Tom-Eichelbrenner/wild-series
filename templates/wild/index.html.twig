{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            {% for program in programs %}
                <div class="col-3">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="{{ program.poster }}" alt="{{ program.title }} poster">
                        <div class="card-body">
                            <h5 class="card-title">{{ program.title }}</h5>
                            <p class="card-text">{{program.summary}}</p>
                            <a href="{{ path('wild_show', { 'slug': program.title|replace({' ': '-'})|lower }) }}" class="btn btn-primary">Watch this program</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
