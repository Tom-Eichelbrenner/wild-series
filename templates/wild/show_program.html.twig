{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Categorie : {{ program.category.name }}</p>
            <strong>Acteur :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="/wild/actor/{{ actor.id }}"> {{ actor.name }} </a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>
            <div>
                {% for season in seasons %}
                    <a href="/wild/season/{{ season.id }}"><h5>Saison {{ season.number }} {{ season.year }}</h5></a>
                    <h6>{{ season.description }}</h6>
                {% endfor %}
            </div>
        </div>
    </div>
    <div>

    </div>
    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}